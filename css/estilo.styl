gris = #666
azul_avatar = rgb(0,149,218)
azul_telegram = rgb(52,97,131)
verde = rgb(152,211,127)

body
	background #dedede
	overflow-x hidden

footer
	background gris
	padding 1em
	margin 0
	display inline-block
	width inherit
	color white
	text-align center

.contedor
	background #FFF

#contenido
	color gris
	border-radius 0.5em
	overflow hidden
	padding 1em

.seccion
	padding 0 1em 0 0
	
	.form-horizontal
		padding-right 1em

	.seccionTitulo
		color azul_avatar

	.seccionPrincipal
		padding 0.7em 0 2em 0
		overflow hidden
		
		.agregar-imagen
			background gris
			width 120px
			height 120px

		label
			padding 0.5em 1em
			width 200px

		.visita-menu
			position relative
			top 1em
			right 1em

.panel
	background #444
	color white
	padding 0.5em 0 0 0
	overflow hidden
	border-radius 0.5em 0 0.5em 0
	
	.active
		background verde

	.tituloPanel
		text-align center

	.row
		padding 2em 0
		position relative
		text-align center
		margin 0
		
		.logo
			background #AAA
			width 120px
			height 120px
			border-radius 50%
			display inline-block
			text-align center

	.item-menu
		color white
		background azul_avatar
		&:hover
			background verde

/*
	-- Login --
*/
.cajita	
	background white
	border 1px solid #CCC
	border-radius 0.3em
	box-shadow 2px 2px 10px rgba(black, 0.2)
	display block
	margin 0 auto
	padding 0.5em
	width 425px
	
	.form-group
		display block
		padding 0.2em 0.5em
		overflow hidden
			
		label
			display inline-block
			padding 0.5em 1.5em
			vertical-aling middle
			width 110px
			color gris

		input
			border-radius 0.3em
			border 1px solid #CCC
			color #666
			display inline-block
			padding 0.5em 1.5em

			&[type="submit"]
				float right
				display inline-block
				margin 0 3em 0 0

		.olvido	
			color gris
			display inline-block
			float left
			font-size 11px
			font-weight normal
			margin 10px 0 0 7px
			text-decoration none
			vertical-aling bottom

			&:hover
				text-decoration underline