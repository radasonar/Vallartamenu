gris = #666
azul_avatar = rgb(0,149,218)
azul_telegram = rgb(52,97,131)
verde = rgb(152,211,127)

body
	background #dedede
	overflow-x hidden

footer
	background gris
	padding 1em
	margin 0
	display inline-block
	width inherit
	color white
	text-align center

.contedor
	background #FFF
	z-index 1

#contenido
	color gris
	border-radius 0.5em
	overflow hidden
	padding 1em

.seccion
	padding 0 1em 0 0

	.form-horizontal
		padding-right 1em

	.seccionTitulo
		color azul_avatar

	.seccionPrincipal
		padding-bottom 2em
		overflow hidden

		.agregar
			background gris
			border-radius 0.3em
			cursor pointer
			float right
			height 100px
			position relative
			right 2em
			width 100px

		.visita-menu
			position relative
			top 1em
			right 1em
	
	.tabla
		padding 1em

		.tituloTabla
			color gris
			font-size 2em

.panel
	background #444
	color white
	padding 0.5em 0 0 0
	overflow hidden
	border-radius 0.5em 0 0.5em 0
	
	.active
		background verde

	.tituloPanel
		text-align center

	.row
		padding 2em 0
		position relative
		text-align center
		margin 0
		
		.avatar
			background #AAA
			width 145px
			height 145px
			border-radius 50%
			display inline-block
			text-align center

	.item-menu
		color white
		background azul_avatar
		&:hover
			background verde
			cursor pointer

.ventana
	display none
	height 100%
	background rgba(black,0.5)
	position fixed
	width 100%
	z-index 2

	.contenidoVentana
		background #FFF
		border-radius 0.5em
		height auto
		margin 0 auto
		padding 1em 2em
		position relative
		top 3em
		width 500px

		.tituloVentana
			color azul_avatar
			border-bottom 1px solid gris
			display block
			text-align center
			padding 0 0 0.5em 0

.cancelar
	position relative
	right 0.5em

.mensajes
	text-align center
	
/*
	-- Login --
*/
.cajita	
	background white
	border 1px solid #CCC
	border-radius 0.3em
	box-shadow 2px 2px 10px rgba(black, 0.2)
	display block
	margin 0 auto
	padding 0.5em 1em
	width 425px
	position relative
	top 4em

	.tituloLogin
		color azul_avatar
		display block
		text-align center

	.olvido
		position relative
		top 1em